<script>
  function closeEditProductModal() {
    const modal = document.getElementById("editProductModal");
    modal.classList.add("hidden");
    modal.classList.remove("flex");
  }

  function openAddVariantModal(productId) {
    const modal = document.getElementById("addVariantModal");
    document.getElementById("variantProductId").value = productId;
    modal.classList.remove("hidden");
    modal.classList.add("flex");
  }

  function closeAddVariantModal() {
    const modal = document.getElementById("addVariantModal");
    modal.classList.add("hidden");
    modal.classList.remove("flex");

    // Clear file inputs and previews
    document.getElementById("addVariantModal").querySelector("form").reset();
    document.getElementById("variantCoverPreview").innerHTML = '';
    document.getElementById("variantCoverPreview").classList.add("hidden");
    document.getElementById("variantSubPreview").innerHTML = '';
    document.getElementById("variantSubPreview").classList.add("hidden");
    selectedVariantSubImages = []; // Reset the file array
  }

  // --- CROPPER STATE & HELPERS ---
  let cropper = null;
  let currentCropCallback = null;
  let cropQueue = [];
  let currentInput = null;

  function startCropper(file, callback) {
    const reader = new FileReader();
    reader.onload = (e) => {
      const image = document.getElementById('imageToCrop');
      image.src = e.target.result;

      const modal = document.getElementById('cropperModal');
      modal.classList.remove('hidden');
      modal.classList.add('flex');

      if (cropper) cropper.destroy();

      cropper = new Cropper(image, {
        viewMode: 1,
        aspectRatio: 1, // Enforce Square
        autoCropArea: 1,
        background: false,
      });
      currentCropCallback = callback;
    };
    reader.readAsDataURL(file);
  }

  function closeCropperModal() {
    const modal = document.getElementById('cropperModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    if (cropper) {
      cropper.destroy();
      cropper = null;
    }
  }

  function cancelCrop() {
    closeCropperModal();
    cropQueue = []; // Abort queue

    // Restore input state if needed
    if (currentInput && currentInput.name === 'subImages') {
      updateSubInputFiles(currentInput);
    } else if (currentInput) {
      currentInput.value = '';
    }
  }

  function cropImage() {
    if (!cropper) return;

    cropper.getCroppedCanvas({
      maxWidth: 1024,
      maxHeight: 1024,
      fillColor: '#fff',
    }).toBlob((blob) => {
      if (currentCropCallback) {
        currentCropCallback(blob);
      }
      closeCropperModal();

      // Next
      if (cropQueue.length > 0) {
        setTimeout(processCropQueue, 200);
      }
    }, 'image/jpeg', 0.9);
  }

  function processCropQueue() {
    if (cropQueue.length === 0) return;

    const { file, input, previewId } = cropQueue.shift();
    currentInput = input;

    startCropper(file, (blob) => {
      const newFile = new File([blob], file.name, { type: 'image/jpeg', lastModified: Date.now() });

      selectedVariantSubImages.push(newFile);

      renderSubImagesPreview(previewId);
      updateSubInputFiles(input);
    });
  }

  function previewImage(input, previewId) {
    if (input.files && input.files[0]) {
      const file = input.files[0];
      currentInput = input;

      startCropper(file, (blob) => {
        const newFile = new File([blob], file.name, { type: 'image/jpeg', lastModified: Date.now() });

        // Update Input
        const dataTransfer = new DataTransfer();
        dataTransfer.items.add(newFile);
        input.files = dataTransfer.files;

        // Preview
        const preview = document.getElementById(previewId);
        preview.innerHTML = '';
        const img = document.createElement('img');
        img.src = URL.createObjectURL(blob);
        img.className = 'w-full h-full object-cover';
        preview.appendChild(img);
        preview.classList.remove('hidden');
      });
    }
  }

  let selectedVariantSubImages = [];

  function previewImages(input, previewId) {
    const errorMsg = document.getElementById("imageLimitError");
    errorMsg.classList.add("hidden");

    if (input.files && input.files.length > 0) {
      if (selectedVariantSubImages.length + input.files.length > 5) {
        errorMsg.classList.remove("hidden");
        errorMsg.innerText = `You can only upload up to 5 images.`;
        updateSubInputFiles(input);
        return;
      }

      Array.from(input.files).forEach(file => {
        // Simple Duplicate Check (by name) just to avoid immediate double-add if user drags same file twice?
        // But cropping changes it, so we rely on user.
        cropQueue.push({ file, input, previewId });
      });

      if (!document.getElementById('cropperModal').classList.contains('flex')) {
        processCropQueue();
      }
    }
  }

  function updateSubInputFiles(input) {
    const dataTransfer = new DataTransfer();
    selectedVariantSubImages.forEach(file => dataTransfer.items.add(file));
    input.files = dataTransfer.files;
  }

  function renderSubImagesPreview(previewId) {
    const preview = document.getElementById(previewId);
    preview.innerHTML = '';

    if (selectedVariantSubImages.length > 0) {
      preview.classList.remove('hidden');
      selectedVariantSubImages.forEach((file, index) => {
        const div = document.createElement('div');
        div.className = 'w-16 h-16 rounded-lg overflow-hidden border border-dashed border-gray-300 relative group';

        const img = document.createElement('img');
        img.src = URL.createObjectURL(file);
        img.className = 'w-full h-full object-cover';

        const removeBtn = document.createElement('button');
        removeBtn.innerHTML = '<i class="fa-solid fa-xmark"></i>';
        removeBtn.className = 'absolute top-0 right-0 bg-red-500 text-white w-4 h-4 text-[10px] flex items-center justify-center rounded-full opacity-0 group-hover:opacity-100 transition cursor-pointer';
        removeBtn.onclick = (ev) => {
          ev.preventDefault();
          removeSubImage(index, document.querySelector('input[name="subImages"]'), previewId);
        };

        div.appendChild(img);
        div.appendChild(removeBtn);
        preview.appendChild(div);
      });
    } else {
      preview.classList.add('hidden');
    }
  }

  function removeSubImage(index, input, previewId) {
    selectedVariantSubImages.splice(index, 1);
    updateSubInputFiles(input);
    renderSubImagesPreview(previewId);
  }

  function validateVariantForm() {
    const errorMsg = document.getElementById("imageLimitError");
    if (selectedVariantSubImages.length < 3) {
      errorMsg.classList.remove("hidden");
      errorMsg.innerText = `You must upload at least 3 images. You currently have ${selectedVariantSubImages.length}.`;
      return false;
    }
    return true;
  }

  function openDeleteModal(type, id) {
    deleteType = type;
    deleteId = id;

    const modal = document.getElementById("deleteConfirmationModal");
    modal.classList.remove("hidden");
    modal.classList.add("flex");
  }


  function closeDeleteModal() {
    const modal = document.getElementById("deleteConfirmationModal");
    modal.classList.add("hidden");
    modal.classList.remove("flex");
  }
</script>

