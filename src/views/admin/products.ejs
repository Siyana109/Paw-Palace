        });

        const data = await res.json();

        if (!data.success) {
          Swal.fire("Error", "Failed to delete product", "error");
          return;
        }

        // remove product row
        document
          .querySelector(`[data-product-row="${deleteId}"]`)
          ?.remove();

        // remove variant row
        document.getElementById(`variant-row-${deleteId}`)?.remove();

        closeDeleteModal();

        Swal.fire("Deleted!", "Product deleted successfully", "success");

      } catch (err) {
        Swal.fire("Error", "Something went wrong", "error");
      }
    }

    // VARIANT DELETE
    if (deleteType === "variant") {
      try {
        const res = await fetch(`/admin/products/variants/delete/${deleteId}`, {
          method: "POST"
        });

        const data = await res.json();

        if (!data.success) {
          Swal.fire("Error", "Failed to delete variant", "error");
          return;
        }

        document
          .querySelector(`[data-variant-id="${deleteId}"]`)
          ?.remove();

        const stockCell = document.querySelector(
          `[data-product-stock="${data.productId}"]`
        );

        if (stockCell) {
          stockCell.innerHTML =
            data.totalStock === 0
              ? `<span class="text-xs font-bold text-red-500">Out of Stock</span>`
              : `<span class="text-sm font-medium text-gray-500">${data.totalStock}</span>`;
        }

        closeDeleteModal();

        Swal.fire("Deleted!", "Variant deleted successfully", "success");

      } catch (err) {
        Swal.fire("Error", "Something went wrong", "error");
      }
    }
  }
