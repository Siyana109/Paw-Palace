<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | PawPalace Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Quicksand', 'sans-serif'] },
                    colors: {
                        brand: { 50: '#fff1f2', 500: '#f43f5e' },
                        accent: { navy: '#0f172a', teal: '#2dd4bf' }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50 font-sans text-accent-navy">

    <div class="flex min-h-screen">
        <%- include('../partials/adminSidebar') %>

            <main class="flex-1 p-8">
                <header class="flex justify-between items-center mb-8">
                    <div>
                        <h1 class="text-3xl font-bold">Users</h1>
                        <p class="text-gray-500">View and manage all users</p>
                    </div>
                    <div class="flex items-center gap-4">
                        <div
                            class="bg-teal-50 text-teal-600 p-2 rounded-full w-10 h-10 flex items-center justify-center font-bold">
                            A</div>
                        <div>
                            <p class="text-sm font-bold">Admin User</p>
                            <p class="text-xs text-gray-400">Super Admin</p>
                        </div>
                    </div>
                </header>

                <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-50 flex flex-wrap gap-4 items-center justify-between">
                        <div class="relative w-full max-w-md">
                            <i
                                class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input type="text" id="searchInput" placeholder="Search users by name or email..."
                                class="w-full pl-12 pr-10 py-2 bg-gray-50 border border-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500/20 transition" />

                            <button id="clearBtn" onclick="clearSearch()"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-red-500 hidden">
                                <i class="fa-solid fa-xmark"></i>
                            </button>
                        </div>
                        <div class="flex gap-2">
                            <input type="date" class="bg-gray-50 border border-gray-100 rounded-xl px-4 py-2 text-sm">
                            <select id="statusFilter" class="bg-gray-50 border border-gray-100 rounded-xl px-4 py-2 text-sm font-bold hover:border-brand-500 transition">
                                <option value="all">All Users</option>
                                <option value="active">Active Users</option>
                                <option value="blocked">Blocked Users</option>
                            </select>
                            <select id="sortSelect" class="bg-gray-50 border border-gray-100 rounded-xl px-4 py-2 text-sm font-bold hover:border-brand-500 transition">
                                <option>Sort</option>
                                <option value="latest">Latest First</option>
                                <option value="oldest">Oldest First</option>
                            </select>
                            <!-- <button class="bg-gray-50 border border-gray-100 rounded-xl px-4 py-2 text-sm font-bold"><i
                                    class="fa-solid fa-arrow-up-z-a mr-2"></i>Sort By</button> -->
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="bg-gray-50 text-gray-400 text-xs font-bold uppercase tracking-wider">
                                <tr>
                                    <th class="px-6 py-4">Sl. no:</th>
                                    <th class="px-6 py-4">Name</th>
                                    <th class="px-6 py-4">Email</th>
                                    <th class="px-6 py-4">Status</th>
                                    <th class="px-6 py-4">Join Date</th>
                                    <th class="px-6 py-4">Orders</th>
                                    <th class="px-6 py-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody" class="divide-y divide-gray-50">
                                <% users.forEach(user=> { %>
                                    <tr class="hover:bg-gray-50/50 transition">
                                        <td class="px-6 py-4 text-sm font-medium text-gray-400">
                                            <%= user.count %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div
                                                    class="w-8 h-8 rounded-full bg-brand-50 text-brand-500 flex items-center justify-center font-bold text-xs">
                                                    <%= user.name.charAt(0) %>
                                                </div>
                                                <span class="font-bold text-sm">
                                                    <%= user.name %>
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500">
                                            <%= user.email %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span
                                                class="px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-wide <%= user.status === 'Active' ? 'bg-green-50 text-green-600' : 'bg-red-50 text-red-600' %>">
                                                <%= user.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500">
                                            <%= user.joinDate %>
                                        </td>
                                        <td class="px-6 py-4 text-sm font-bold">
                                            <%= user.orderCount %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-2">
<button
  class="action-btn flex items-center gap-2 <%= user.status === 'Active'
    ? 'bg-brand-50 text-brand-500'
    : 'bg-teal-50 text-teal-600' %>
  px-4 py-1.5 rounded-lg text-xs font-bold hover:bg-opacity-80 transition"
  data-id="<%= user.id %>"
  data-name="<%= user.name %>"
  data-email="<%= user.email %>"
  data-action="<%= user.status === 'Active' ? 'block' : 'unblock' %>">

  <i class="fa-solid <%= user.status === 'Active' ? 'fa-lock' : 'fa-lock-open' %>"></i>
  <%= user.status === 'Active' ? 'Block' : 'Unblock' %>
</button>

                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div class="p-6 bg-white flex justify-between items-center text-sm font-bold">
                        <span class="text-gray-400" id="paginationInfo"></span>

                        <!-- ðŸ‘‡ THIS IS WHERE YOU ADD IT -->
                        <div id="pagination" class="flex items-center gap-2"></div>
                    </div>
                </div>
    </div>
    </main>
    </div>

    

    <!-- Confirmation Modal -->
<div id="confirmModal"
     class="fixed inset-0 z-[60] hidden items-center justify-center p-4 bg-accent-navy/40 backdrop-blur-sm">

  <div class="bg-white rounded-[2.5rem] p-10 max-w-md w-full shadow-2xl text-center border-4 border-white/50">

    <div id="modalIcon"
         class="w-20 h-20 bg-red-50 text-red-500 rounded-full flex items-center justify-center mx-auto mb-6 text-3xl">
      <i class="fa-solid fa-triangle-exclamation"></i>
    </div>

    <h3 id="modalTitle" class="text-2xl font-bold mb-2">
      Block this user?
    </h3>

    <p class="text-gray-500 text-sm mb-8 leading-relaxed">
      Are you sure you want to
      <span id="modalActionText">block</span>
      <strong id="modalUserName"></strong>?
    </p>

    <div class="bg-red-50/50 rounded-3xl p-4 flex items-center gap-4 mb-8 text-left border border-red-50">
      <div id="modalAvatar"
           class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center font-bold text-red-500 shadow-sm">
      </div>
      <div>
        <p class="font-bold text-sm" id="modalUserNameSmall"></p>
        <p class="text-xs text-gray-400" id="modalUserEmail"></p>
      </div>
    </div>

    <div class="flex flex-col gap-3">
      <form id="confirmForm" method="POST">
        <button
          type="submit"
          class="w-full py-4 bg-brand-500 text-white rounded-2xl font-bold shadow-lg hover:-translate-y-1 transition">
          Confirm
        </button>
      </form>

      <button onclick="closeModal()"
        class="w-full py-4 bg-white border border-gray-100 text-gray-400 rounded-2xl font-bold hover:bg-gray-50 transition">
        Cancel
      </button>
    </div>
  </div>
</div>



    <script>


        let currentPage = 1;
        const limit = 8;

        const searchInput = document.getElementById("searchInput");
        const tableBody = document.getElementById("usersTableBody");
        const clearBtn = document.getElementById("clearBtn");
        const pagination = document.getElementById("pagination");
        const paginationInfo = document.getElementById("paginationInfo");
        const statusFilter = document.getElementById("statusFilter");
        const sortSelect = document.getElementById("sortSelect");

        let debounceTimer;

        //status
        statusFilter.addEventListener("change", () => {
            currentPage = 1;
            fetchUsers(searchInput.value.trim(), currentPage);
        });

        //sort
        sortSelect.addEventListener("change", () => {
            currentPage = 1;
            fetchUsers(searchInput.value.trim(), currentPage);
        });


        // ðŸ” Live search
        searchInput.addEventListener("input", () => {
            const query = searchInput.value.trim();
            clearBtn.classList.toggle("hidden", query.length === 0);

            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                currentPage = 1;
                fetchUsers(query, currentPage);
            }, 300);
        });

        function clearSearch() {
            searchInput.value = "";
            clearBtn.classList.add("hidden");
            currentPage = 1;
            fetchUsers("", currentPage);
        }

        // ðŸ“¡ Fetch users (search + pagination)
        async function fetchUsers(query = "", page = 1) {
            const status = statusFilter.value;
            const sort = sortSelect.value;

            const res = await fetch(
                `/admin/users/list?q=${encodeURIComponent(query)}&page=${page}&limit=${limit}&status=${status}&sort=${sort}`
            );
            const data = await res.json();

            renderUsers(data.users);
            renderPagination(data.currentPage, data.totalPages);

            paginationInfo.textContent =
                `Showing page ${data.currentPage} of ${data.totalPages}`;

            currentPage = data.currentPage;
        }

        // ðŸ§± Render table
        function renderUsers(users) {
            tableBody.innerHTML = "";

            if (!users.length) {
                tableBody.innerHTML = `
        <tr>
            <td colspan="7" class="px-6 py-10 text-center text-gray-400 font-bold">
                No users found
            </td>
        </tr>`;
                return;
            }

            users.forEach(user => {
const actionButton = `
<button
  class="action-btn flex items-center gap-2 ${
    user.status === "Active"
      ? "bg-brand-50 text-brand-500"
      : "bg-teal-50 text-teal-600"
  } px-4 py-1.5 rounded-lg text-xs font-bold hover:bg-opacity-80 transition"
  data-id="${user.id}"
  data-name="${user.name}"
  data-email="${user.email}"
  data-action="${user.status === "Active" ? "block" : "unblock"}">

  <i class="fa-solid ${
    user.status === "Active" ? "fa-lock" : "fa-lock-open"
  }"></i>
  ${user.status === "Active" ? "Block" : "Unblock"}
</button>`;



                tableBody.innerHTML += `
        <tr class="hover:bg-gray-50/50 transition">
            <td class="px-6 py-4 text-sm text-gray-400">${user.count}</td>
            <td class="px-6 py-4 font-bold">${user.name}</td>
            <td class="px-6 py-4 text-gray-500">${user.email}</td>
            <td class="px-6 py-4">
                <span class="px-3 py-1 rounded-full text-[10px] font-bold ${user.status === "Active"
                        ? "bg-green-50 text-green-600"
                        : "bg-red-50 text-red-600"
                    }">${user.status}</span>
            </td>
            <td class="px-6 py-4 text-gray-500">${user.joinDate}</td>
            <td class="px-6 py-4 font-bold">${user.orderCount}</td>
            <td class="px-6 py-4">${actionButton}</td>
        </tr>`;
            });
        }


        // ðŸ”¢ Pagination buttons
        function renderPagination(current, total) {
            pagination.innerHTML = "";

            if (total <= 1) return;

            for (let i = 1; i <= total; i++) {
                pagination.innerHTML += `
        <button
            onclick="changePage(${i})"
            class="w-10 h-10 rounded-xl ${i === current
                        ? "bg-brand-500 text-white"
                        : "text-gray-400 hover:bg-gray-50"
                    }">
            ${i}
        </button>`;
            }
        }

        function changePage(page) {
            fetchUsers(searchInput.value.trim(), page);
        }

        // ðŸš€ Initial load
        fetchUsers("", 1);


        const modal = document.getElementById("confirmModal");
const modalTitle = document.getElementById("modalTitle");
const modalActionText = document.getElementById("modalActionText");
const modalUserName = document.getElementById("modalUserName");
const modalUserNameSmall = document.getElementById("modalUserNameSmall");
const modalUserEmail = document.getElementById("modalUserEmail");
const modalAvatar = document.getElementById("modalAvatar");
const confirmForm = document.getElementById("confirmForm");
const modalIcon = document.getElementById("modalIcon");

function openConfirmModal(id, name, email, action) {
  modal.classList.remove("hidden");
  modal.classList.add("flex");

  modalTitle.textContent =
    action === "block" ? "Block this user?" : "Unblock this user?";
  modalActionText.textContent = action;
  modalUserName.textContent = name;
  modalUserNameSmall.textContent = name;
  modalUserEmail.textContent = email;
  modalAvatar.textContent = name.charAt(0).toUpperCase();

  modalIcon.innerHTML =
    action === "block"
      ? `<i class="fa-solid fa-triangle-exclamation"></i>`
      : `<i class="fa-solid fa-shield-cat"></i>`;

  confirmForm.action = `/admin/users/${id}/${action}`;
}

function closeModal() {
  modal.classList.add("hidden");
  modal.classList.remove("flex");
}

document.addEventListener("click", (e) => {
  const btn = e.target.closest(".action-btn");
  if (!btn) return;

  openConfirmModal(
    btn.dataset.id,
    btn.dataset.name,
    btn.dataset.email,
    btn.dataset.action
  );
});


    </script>


</body>

</html>