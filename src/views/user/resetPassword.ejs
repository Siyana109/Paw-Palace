<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Reset Password | PawPalace' %></title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Quicksand', 'sans-serif'] },
                    colors: {
                        brand: { 500: '#f43f5e', 50: '#fff1f2' },
                        accent: { teal: '#2dd4bf', tealDark: '#0d9488', navy: '#0f172a', cream: '#fffdf5' }
                    }
                }
            }
        }
    </script>

    <style>
        .strength-bar { transition: width 0.3s ease, background-color 0.3s ease; }
    </style>
</head>
<body class="font-sans text-accent-navy antialiased bg-accent-cream min-h-screen flex flex-col items-center justify-center p-6">

    <div class="max-w-md w-full">
        <div class="flex flex-col items-center mb-10">
            <div class="bg-brand-500 text-white p-3 rounded-2xl shadow-lg mb-4">
                <i class="fa-solid fa-shield-dog text-2xl"></i>
            </div>
            <h1 class="text-3xl font-extrabold text-accent-navy">Set New Password</h1>
            <p class="text-gray-400 font-medium text-center mt-2">Almost there! Choose a strong password to secure your account.</p>
        </div>

        <% if (typeof error !== 'undefined' && error.length > 0) { %>
            <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 text-red-700 rounded-r-xl flex items-center gap-3 text-sm font-bold">
                <i class="fa-solid fa-circle-exclamation"></i>
                <p><%= error %></p>
            </div>
        <% } %>

        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 shadow-xl border border-gray-100 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-24 h-24 bg-brand-50 rounded-bl-full -mr-8 -mt-8 pointer-events-none opacity-60"></div>

            <form action="/reset-password" method="POST" class="space-y-6 relative z-10">
                <input type="hidden" name="token" value="<%= typeof token !== 'undefined' ? token : '' %>">

                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2">New Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fa-solid fa-key text-gray-400 group-focus-within:text-accent-tealDark transition"></i>
                        </div>
                        <input type="password" name="password" id="password" onkeyup="checkStrength(this.value)" placeholder="••••••••" class="w-full bg-gray-50 border border-gray-200 rounded-xl py-3.5 px-4 pl-12 pr-12 focus:outline-none focus:border-brand-500 transition font-medium" required>
                        <button type="button" onclick="togglePassword('password', this)" class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-accent-navy transition">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                    
                    <div class="mt-3">
                        <div class="flex justify-between items-end mb-1">
                            <span class="text-[10px] uppercase tracking-wider font-bold text-gray-400">Strength</span>
                            <span id="strength-text" class="text-[10px] uppercase tracking-wider font-bold text-gray-400">Too Short</span>
                        </div>
                        <div class="w-full bg-gray-100 rounded-full h-1.5 overflow-hidden">
                            <div id="strength-bar" class="strength-bar bg-red-400 h-full w-0"></div>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2">Confirm Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fa-solid fa-check-double text-gray-400 group-focus-within:text-accent-tealDark transition"></i>
                        </div>
                        <input type="password" name="confirmPassword" id="confirm-password" placeholder="••••••••" class="w-full bg-gray-50 border border-gray-200 rounded-xl py-3.5 px-4 pl-12 pr-12 focus:outline-none focus:border-brand-500 transition font-medium" required>
                        <button type="button" onclick="togglePassword('confirm-password', this)" class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-accent-navy transition">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="w-full bg-brand-500 text-white py-4 rounded-xl font-bold shadow-[4px_4px_0px_0px_rgba(13,148,136,1)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all">
                    Reset Password
                </button>
            </form>
        </div>

        <div class="mt-8 text-center">
            <a href="/login" class="text-sm font-bold text-accent-tealDark hover:text-brand-500 transition">
                <i class="fa-solid fa-arrow-left mr-1"></i> Return to Login
            </a>
        </div>
    </div>

    <script>
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        function checkStrength(password) {
            const bar = document.getElementById('strength-bar');
            const text = document.getElementById('strength-text');
            const score = [
                password.length >= 8,
                /[A-Z]/.test(password),
                /[0-9]/.test(password),
                /[!@#$%^&*]/.test(password)
            ].filter(Boolean).length;

            let width = '0%', color = 'bg-gray-200', label = 'Too Short';
            if (password.length > 0) {
                if (score <= 1) { width = '25%'; color = 'bg-red-400'; label = 'Weak'; }
                else if (score === 2) { width = '50%'; color = 'bg-yellow-400'; label = 'Fair'; }
                else if (score === 3) { width = '75%'; color = 'bg-yellow-300'; label = 'Good'; }
                else if (score === 4) { width = '100%'; color = 'bg-green-500'; label = 'Strong'; }
            }
            bar.style.width = width;
            bar.className = `strength-bar h-full ${color}`;
            text.innerText = label;
        }
    </script>
</body>
</html>