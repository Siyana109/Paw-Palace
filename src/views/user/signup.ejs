<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'Create Account | PawPalace' %>
    </title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Quicksand', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            50: '#fff1f2', 100: '#ffe4e6', 200: '#fecdd3', 300: '#fda4af',
                            400: '#fb7185', 500: '#f43f5e', 600: '#e11d48', 700: '#be123c',
                            800: '#9f1239', 900: '#881337',
                        },
                        accent: {
                            teal: '#2dd4bf', tealDark: '#0d9488', navy: '#0f172a', cream: '#fffdf5'
                        }
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'blob': 'blob 10s infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-10px)' },
                        },
                        blob: {
                            '0%': { transform: 'translate(0px, 0px) scale(1)' },
                            '33%': { transform: 'translate(30px, -50px) scale(1.1)' },
                            '66%': { transform: 'translate(-20px, 20px) scale(0.9)' },
                            '100%': { transform: 'translate(0px, 0px) scale(1)' },
                        }
                    }
                }
            }
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fullNameInput = document.getElementById('fullName');
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const termsCheckbox = document.getElementById('terms');
            const submitBtn = document.getElementById('submitBtn');

            const errors = {
                fullName: document.getElementById('fullNameError'),
                email: document.getElementById('emailError'),
                password: document.getElementById('passwordError'),
                confirmPassword: document.getElementById('confirmPasswordError'),
                terms: document.getElementById('termsError')
            };

            function showError(el, msg) {
                el.textContent = msg;
                el.classList.remove('hidden');
            }

            function hideError(el) {
                el.textContent = '';
                el.classList.add('hidden');
            }

            function validatefullName() {
                if (fullNameInput.value.trim().length < 3) {
                    showError(errors.fullName, 'Name must be at least 3 characters');
                    return false;
                }
                hideError(errors.fullName);
                return true;
            }

            function validateEmail() {
                const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!regex.test(emailInput.value.trim())) {
                    showError(errors.email, 'Enter a valid email address');
                    return false;
                }
                hideError(errors.email);
                return true;
            }

            function validatePassword() {
                const value = passwordInput.value;
                const strong = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d).{8,}$/;

                if (!strong.test(value)) {
                    showError(
                        errors.password,
                        'Password must be 8+ chars, include uppercase, lowercase & number'
                    );
                    return false;
                }
                hideError(errors.password);
                return true;
            }

            function validateConfirmPassword() {
                if (confirmPasswordInput.value !== passwordInput.value) {
                    showError(errors.confirmPassword, 'Passwords do not match');
                    return false;
                }
                hideError(errors.confirmPassword);
                return true;
            }

            function validateTerms() {
                if (!termsCheckbox.checked) {
                    showError(errors.terms, 'You must accept the terms');
                    return false;
                }
                hideError(errors.terms);
                return true;
            }

            function validateForm() {
                const valid =
                    validatefullName() &&
                    validateEmail() &&
                    validatePassword() &&
                    validateConfirmPassword() &&
                    validateTerms();

                submitBtn.disabled = !valid;
                submitBtn.classList.toggle('cursor-not-allowed', !valid);
                submitBtn.classList.toggle('bg-brand-500/70', !valid);
                submitBtn.classList.toggle('bg-brand-500', valid);
            }

            // Real-time listeners
            fullNameInput.addEventListener('input', validateForm);
            emailInput.addEventListener('input', validateForm);
            passwordInput.addEventListener('input', validateForm);
            confirmPasswordInput.addEventListener('input', validateForm);
            termsCheckbox.addEventListener('change', validateForm);
        });
    </script>


    <style>
        .hero-pattern {
            background-color: #fff1f2;
            background-image: radial-gradient(#f43f5e 1px, transparent 1px);
            background-size: 20px 20px;
            opacity: 0.3;
        }
    </style>
</head>

<body
    class="font-sans text-accent-navy antialiased bg-accent-cream selection:bg-accent-teal selection:text-white h-screen overflow-hidden">

    <div class="flex min-h-screen">

        <div
            class="w-full lg:w-1/2 flex flex-col justify-center px-6 sm:px-12 xl:px-24 bg-white relative z-10 overflow-y-auto">

            <div class="absolute top-8 left-8">
                <a href="/" class="flex items-center gap-2 cursor-pointer group">
                    <div
                        class="bg-brand-500 text-white p-1.5 rounded-xl shadow-[3px_3px_0px_0px_rgba(13,148,136,1)] transform group-hover:translate-x-0.5 group-hover:translate-y-0.5 group-hover:shadow-none transition-all duration-200">
                        <i class="fa-solid fa-arrow-left text-sm"></i>
                    </div>
                    <span class="font-bold text-accent-navy group-hover:text-brand-500 transition">Back to Shop</span>
                </a>
            </div>

            <div class="max-w-md mx-auto w-full mt-20 lg:mt-0 py-10">
                <div class="mb-8 text-center lg:text-left">
                    <!-- <div
                        class="inline-flex items-center justify-center w-14 h-14 bg-accent-teal/10 text-accent-tealDark rounded-2xl mb-4 text-2xl animate-bounce">
                        <i class="fa-solid fa-user-plus"></i>
                    </div> -->
                    <h1 class="text-4xl font-extrabold text-accent-navy mb-2">Join the Pack!</h1>
                    <p class="text-gray-500 font-medium">Create an account to track orders & earn treats.</p>
                </div>

                <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                    <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 text-red-700">
                        <ul class="list-disc ml-5">
                            <% errors.forEach(function(error) { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                    <% } %>

                        <form action="/signup" method="POST" class="space-y-5">

                            <div>
                                <label for="name" class="block text-sm font-bold text-accent-navy mb-2">Full
                                    Name</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <i
                                            class="fa-regular fa-user text-gray-400 group-focus-within:text-accent-tealDark transition"></i>
                                    </div>
                                    <input type="text" name="fullName" id="fullName"
                                        value="<%= typeof formData !== 'undefined' ? formData.fullName : '' %>"
                                        class="w-full pl-11 pr-4 py-3.5 bg-gray-50 border-2 border-gray-100 rounded-xl focus:outline-none focus:bg-white focus:border-brand-500 text-accent-navy font-medium transition duration-200 placeholder-gray-400"
                                        placeholder="Your Name" required>
                                        <p id="fullNameError" class="text-sm text-red-500 mt-1 hidden"></p>

                                </div>
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-bold text-accent-navy mb-2">Email
                                    Address</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <i
                                            class="fa-regular fa-envelope text-gray-400 group-focus-within:text-accent-tealDark transition"></i>
                                    </div>
                                    <input type="email" name="email" id="email"
                                        value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
                                        class="w-full pl-11 pr-4 py-3.5 bg-gray-50 border-2 border-gray-100 rounded-xl focus:outline-none focus:bg-white focus:border-brand-500 text-accent-navy font-medium transition duration-200 placeholder-gray-400"
                                        placeholder="doggo@example.com" required>
                                        <p id="emailError" class="text-sm text-red-500 mt-1 hidden"></p>

                                </div>
                            </div>

                            <div>
                                <label for="password"
                                    class="block text-sm font-bold text-accent-navy mb-2">Password</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <i
                                            class="fa-solid fa-lock text-gray-400 group-focus-within:text-accent-tealDark transition"></i>
                                    </div>
                                    <input type="password" name="password" id="password"
                                        class="w-full pl-11 pr-12 py-3.5 bg-gray-50 border-2 border-gray-100 rounded-xl focus:outline-none focus:bg-white focus:border-brand-500 text-accent-navy font-medium transition duration-200 placeholder-gray-400"
                                        placeholder="At least 8 characters" required>
                                        <p id="passwordError" class="text-sm text-red-500 mt-1 hidden"></p>

                                    <button type="button" onclick="togglePassword('password', 'eye-icon')"
                                        class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-accent-navy transition cursor-pointer">
                                        <i class="fa-regular fa-eye" id="eye-icon"></i>
                                    </button>
                                </div>
                            </div>

                            <div>
                                <label for="confirmPassword"
                                    class="block text-sm font-bold text-accent-navy mb-2">Confirm Password</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <i
                                            class="fa-solid fa-lock text-gray-400 group-focus-within:text-accent-tealDark transition"></i>
                                    </div>
                                    <input type="password" name="confirmPassword" id="confirmPassword"
                                        class="w-full pl-11 pr-12 py-3.5 bg-gray-50 border-2 border-gray-100 rounded-xl focus:outline-none focus:bg-white focus:border-brand-500 text-accent-navy font-medium transition duration-200 placeholder-gray-400"
                                        placeholder="Repeat password" required>
                                        <p id="confirmPasswordError" class="text-sm text-red-500 mt-1 hidden"></p>

                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex items-center h-5">
                                    <input id="terms" type="checkbox" name="terms"
                                        class="h-5 w-5 text-brand-500 focus:ring-brand-500 border-gray-300 rounded cursor-pointer accent-brand-500"
                                        required>
                                        <p id="termsError" class="text-sm text-red-500 mt-1 hidden"></p>

                                </div>
                                <div class="ml-2 text-sm">
                                    <label for="terms" class="font-medium text-gray-500">
                                        I agree to the <a href="/terms"
                                            class="text-brand-500 font-bold hover:underline">Terms of Service</a> and <a
                                            href="/privacy" class="text-brand-500 font-bold hover:underline">Privacy
                                            Policy</a>
                                    </label>
                                </div>
                            </div>

                            <button id="submitBtn" type="submit" disabled
                                class="w-full bg-brand-500 text-white py-4 rounded-xl font-bold text-lg shadow-[4px_4px_0px_0px_rgba(13,148,136,1)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all flex items-center justify-center gap-2 group">
                                Create Account <i class="fa-solid fa-paw group-hover:rotate-12 transition"></i>
                            </button>

                        </form>

                        <div class="relative flex items-center my-8">
                            <div class="flex-grow border-t border-gray-100"></div>
                            <span class="flex-shrink-0 mx-4 text-gray-400 text-sm font-bold uppercase tracking-wider">Or
                                join with</span>
                            <div class="flex-grow border-t border-gray-100"></div>
                        </div>

                        <div class="grid grid-cols-1 gap-4 mb-8 place-items-center">
                            <button
                                class="flex items-center justify-center gap-2 py-3 px-4 border-2 border-gray-100 rounded-xl font-bold text-gray-600 hover:border-brand-200 hover:bg-brand-50 transition duration-300">
                                <i class="fa-brands fa-google text-brand-500"></i> Sign in with Google
                            </button>
                        </div>

                        <div class="mt-8 text-center pb-8">
                            <p class="text-gray-500 font-medium">
                                Already have an account?
                                <a href="/login"
                                    class="text-accent-tealDark font-bold hover:text-brand-500 hover:underline transition">Sign
                                    in here</a>
                            </p>
                        </div>
            </div>
        </div>

        <div class="hidden lg:block lg:w-1/2 relative bg-brand-50 overflow-hidden">
            <div class="absolute inset-0 hero-pattern z-0"></div>
            <div
                class="absolute top-[10%] right-[10%] w-[25rem] h-[25rem] bg-accent-teal/20 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob">
            </div>
            <div
                class="absolute bottom-[10%] left-[10%] w-[35rem] h-[35rem] bg-brand-200 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-blob animation-delay-2000">
            </div>

            <div class="relative h-full w-full flex flex-col items-center justify-center p-12 z-10">
                <div
                    class="absolute top-32 left-20 bg-white/90 backdrop-blur p-4 rounded-2xl shadow-xl animate-float max-w-xs border-r-4 border-accent-teal z-20">
                    <div class="flex items-center gap-3">
                        <div
                            class="w-12 h-12 rounded-xl bg-accent-teal/20 flex items-center justify-center text-accent-tealDark text-xl font-bold">
                            <i class="fa-solid fa-gift"></i>
                        </div>
                        <div>
                            <p class="text-accent-navy font-bold text-lg">15% OFF</p>
                            <p class="text-gray-500 text-xs font-bold uppercase">On your first order!</p>
                        </div>
                    </div>
                </div>

                <div
                    class="relative w-[480px] h-[600px] rounded-[3rem] overflow-hidden border-[8px] border-white shadow-2xl -rotate-2 hover:rotate-0 transition duration-500 ease-out">
                    <img src="https://images.unsplash.com/photo-1591160690555-5debfba289f0?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                        alt="Cute Puppy" class="w-full h-full object-cover">
                    <div
                        class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-10 text-white">
                        <h3 class="text-3xl font-bold mb-2">New Beginnings</h3>
                        <p class="text-brand-100 font-medium">Start your journey with premium care, toys, and treats
                            tailored for your best friend.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const eyeIcon = document.getElementById(iconId);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }
    </script>
</body>

</html>